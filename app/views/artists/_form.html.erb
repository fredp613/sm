<%= form_for(@artist) do |f| %>
  <% if @artist.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@artist.errors.count, "error") %> prohibited this artist from being saved:</h2>

      <ul>
      <% @artist.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset>
    <legend>Artist Info</legend>
    <div class="field">

      <%= f.label :artist_name %><br>
      <%= f.text_field :artist_name %>
    </div>
    <div class="field">
      <%= f.label :first_name %><br>
      <%= f.text_field :first_name %>
    </div>
    <div class="field">
      <%= f.label :last_name %><br>
      <%= f.text_field :last_name %>
    </div>

  </fieldset>

 <fieldset> <legend>Twitter</legend>
  <%= f.fields_for :twitterposters do |t| %>

    <%= t.hidden_field :id %>
      <div class="field">
      <%= t.label "twitter id" %><br>
      <%= t.number_field :user_id %>
    </div>
    <div class="field">
      <%= t.label :screen_name %><br>
      <%= t.text_field :screen_name %>
    </div>
    <%= t.hidden_field :artist_id %>
  
    <div class="field">
      <%= t.label :remote_profile_image_url %><br>
      <%= t.text_field :remote_profile_image_url %>    
    </div>
  <% end %>
</fieldset>

<fieldset>
  <legend>Instagram</legend>
