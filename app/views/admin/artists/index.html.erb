<h1>Listing artists</h1>

<table>
  <thead>
    <tr>
      <th>Artist name</th>
      <th>First name</th>
      <th>Last name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @artists.each do |artist| %>
      <tr>
        <td><%= artist.artist_name %></td>
        <td><%= artist.first_name %></td>
        <td><%= artist.last_name %></td>
        <td><%= link_to 'Show', admin_artist_path(artist) %></td>
        <td><%= link_to 'Edit', edit_admin_artist_path(artist) %></td>
        <td><%= link_to 'Destroy', admin_artist_path(artist), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Artist', new_admin_artist_path %>
